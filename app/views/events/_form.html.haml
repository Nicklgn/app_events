= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message

  .row
    .col-md-12
      .form-group
        = f.label :ename
        = f.text_field :ename, class: 'form-control'
  .row
    .col-md-12
      .form-group
        = f.label :publ
        = f.select :publ, ['Сайт НИЯУ МИФИ', 'МОН'], {}, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :estart
        #datetimepicker1.input-group.date{"data-target-input" => "nearest"}
          = f.text_field :estart, {class: 'form-control', "data-target" => "#datetimepicker1"}
          .input-group-append{"data-target" => "#datetimepicker1", "data-toggle" => "datetimepicker"}
            .input-group-text
              %i.fa.fa-calendar
    .col-md-4
      .form-group
        = f.label :efinish
        #datetimepicker2.input-group.date{"data-target-input" => "nearest"}
          = f.text_field :efinish, {class: 'form-control', "data-target" => "#datetimepicker2"}
          .input-group-append{"data-target" => "#datetimepicker2", "data-toggle" => "datetimepicker"}
            .input-group-text
              %i.fa.fa-calendar
    .col-md-4
      .form-group
        = f.label :level
        = f.select :level, ['Местный', 'Федеральный', 'Еще какой-нибудь'], {}, class: 'form-control'
  .row
    .col-md-4
      .form-group
        = f.label :edesc
        = f.text_area :edesc, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :member
        = f.text_area :member, class: 'form-control'
    .col-md-4
      .form-group
        = f.label :eplace
        = f.text_area :eplace, class: 'form-control'
  .actions
    = f.submit nil, class: 'btn btn-primary'
