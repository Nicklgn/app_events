.row
  %h1= t('headers.events.index')
  = link_to new_event_path, class: 'btn btn-primary circle' do
    = fa_icon :plus

.row
  .col-md-6
    = month_calendar do |date|
      = date.day
  .col-md-6
    %ul.list-group
      - @events.each do |event|
        %li.list-group-item
          .row
            .col-md-12
              = link_to event.ename, event
          .row
            .col-md-12
              .tms
                = event.estart.to_s + ' - ' + event.efinish.to_s
