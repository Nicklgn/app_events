= form_for @picture do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      %ul
        - @picture.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :sign
    = f.text_field :sign
  .field
    = f.label :image
    = f.file_field :image
  .field
    = f.label :block
    = f.select :block_id, Block.all.map{|b| b.id}
  .actions
    = f.submit 'Save'
