.row
  %h1= t('headers.articles.index')
  = link_to new_article_path, class: 'btn btn-primary circle' do
    = fa_icon :plus

%ul.list-group
  - @articles.each do |article|
    %li.list-group-item
      .row
        - if (article.artype == 1)
          .anons
            .anonstxt
              Анонс
        - if (article.artype == 2)
          .itogi
            .itogitxt
              Итоги
        .col-md-2
          .tms
            = article.publdate
      .row
        .col-md-12
          .nz
            - if article.nfcaption.present?
              = link_to article.nfcaption, article
            - else
              = link_to article.caption, article
      .row
        .col-md-12
          = article.nfdesc
